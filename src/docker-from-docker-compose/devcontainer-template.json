{
    "id": "docker-from-docker-compose",
    "version": "1.0.0",
    "name": "Docker from Docker Compose",
    "description": "Access your host's Docker install from inside a container when using Docker Compose. Installs Docker extension in the container along with needed CLIs.",
    "documentationURL": "https://github.com/devcontainers/templates/tree/main/src/docker-from-docker-compose",
    "publisher": "Dev Container Spec Maintainers",
    "licenseURL": "https://github.com/devcontainers/templates/LICENSE",
    "type": "dockerCompose",
    "options": {
        "installZsh": {
            "type": "boolean",
            "description": "Install ZSH?",
            "default": "true",
            "replaceIn": [
                ".devcontainer/Dockerfile"
            ]
        },
        "upgradePackages": {
            "type": "boolean",
            "description": "Upgrade OS packages?",
            "default": "false",
            "replaceIn": [
                ".devcontainer/Dockerfile"
            ]
        },
        "dockerVersion": {
            "type": "string",
            "proposals": [
                "latest",
                "none",
                "20.10"
            ],
            "default": "latest",
            "description": "Select or enter a Docker/Moby CLI version. (Availability can vary by OS version.)",
            "replaceIn": [
                ".devcontainer/Dockerfile"
            ]
        },
        "moby": {
            "type": "boolean",
            "default": "true",
            "description": "Install OSS Moby build instead of Docker CE",
            "replaceIn": [
                ".devcontainer/Dockerfile"
            ]
        },
        "enableNonRootDocker": {
            "type": "boolean",
            "description": "Enable non-root Docker access in container?",
            "default": "true",
            "replaceIn": [
                ".devcontainer/Dockerfile"
            ]
        }
    },
    "platforms": [
        "Any"
    ]
}
